# Server Configuration
NODE_ENV=development
PORT=3000

# Demo Mode: true لتفعيل وضع الديمو (استخدام الحسابات التجريبية فقط)
# في وضع الديمو، يستخدم النظام حسابات ثابتة بدون قاعدة بيانات
DEMO_MODE=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/clinic_db

# JWT Secret (generate a strong random secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:5000
